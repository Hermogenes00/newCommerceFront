<div class="row mt-3">
    <div class="col">


        <div class="text-center">
            <h1 class="display-6">CANCELADOS</h1>
        </div>
        <table class="table caption-top">

            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Pedido</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Status</th>
                    <th scope="col">Produto</th>
                    <th scope="col">Valor</th>
                    <th scope="col">Opções</th>
                </tr>
            </thead>
            <tbody>
                <% itens.filter(i=>
                    i.status=='CANCELADO'||i.status=='REFUGADO'||i.status=='ARQUIVO_VAZIO').forEach(item=>{%>
                    <tr>
                        <th scope="row">
                            <%= item.id %>
                        </th>
                        <td>
                            <%= item.pedido.id %>
                        </td>
                        <td>
                            <%= item.pedido.cliente.nome %>
                        </td>
                        <td>
                            <%= item.status %>
                        </td>
                        <td>
                            <%= item.produto.nome %>
                        </td>
                        <td>
                            <%= parseFloat(item.valor).toLocaleString('pt-br',{style:'currency',currency:'brl'}) %>
                        </td>
                        <td><button class="btn btn-success btn-sm" onclick="restaurarTrabalho(event)"
                                data-idorder="<%= item.pedido.id %>"
                                data-idItemOrder="<%= item.id %>">Restaurar</button></td>
                    </tr>
                    <%}) %>
            </tbody>
        </table>
    </div>
</div>