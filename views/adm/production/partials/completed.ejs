<div class="row mt-3">
    <div class="col">


        <div class="text-center">
            <h1 class="display-6">Concluídos</h1>
        </div>
        <table class="table caption-top">

            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Pedido</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Produto</th>
                    <th scope="col">Valor</th>
                    <th scope="col">Opções</th>
                </tr>
            </thead>
            <tbody>
                <% itens.filter(i=>i.status=='CONCLUÍDO').forEach(item=>{%>
                    <tr>
                        <th scope="row">
                            <%= item.id %>
                        </th>
                        <td>
                            <%= item.pedido.id %>
                        </td>
                        <td>
                            <%= item.pedido.cliente.nome %>
                        </td>
                        <td>
                            <%= item.produto.nome %>
                        </td>
                        <td>
                            <%= parseFloat(item.valor).toLocaleString('pt-br',{style:'currency',currency:'brl'}) %>
                        </td>
                        <td><button class="btn btn-primary btn-sm">Opções</button>
                    </tr>
                    <%}) %>
            </tbody>
        </table>
    </div>
</div>