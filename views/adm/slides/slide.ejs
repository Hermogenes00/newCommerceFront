<%- include('../partials/header.ejs') %>
  <%- include('../partials/navbar.ejs') %>
    <%- include('../partials/content.ejs') %>

      <div class="row">
        <div class="col">
          <div class="card mt-2 card-outline card-primary">
            <div class="card-header">

            </div>
            <div class="card-body">
              <div class="col">
                <img src="<%=slide.imagem%>" class="rounded" width="100%" height="300" id="previaImagem" alt="">
                <input type="file" name="fileImagem" onchange="previaImagem(event)" id="fileImagem">
              </div>
              <form action="/admin/slide/update" method="post">
                <div class="row">
                  <div class="col">
                    <input type="hidden" id="imagem" value="<%=slide.imagem%>" name="imagem">
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <label for="titulo">Titulo</label>
                    <input class="form-control form-control-sm" type="text" value="<%= slide.titulo %>" name="titulo"
                      id="titulo">
                  </div>
                  <div class="col">
                    <label for="subTitulo">SubTitulo</label>
                    <input class="form-control form-control-sm" type="text" name="subTitulo"
                      value="<%= slide.subTitulo %>" id="subTitulo">
                  </div>
                </div>
                <div class="card-footer">
                  <div class="row">
                    <div class="col">
                      <input type="hidden" name="id" id="id" value="<%= slide.id %>">
                      <button class="btn btn-primary btn-sn" type="submit">Salvar</button>
                    </div>
                    <div class="col">
                      <a href="/slides" class="btn btn-warning btn-sm">Cancelar</a>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>




      <%- include('../partials/footer.ejs') %>