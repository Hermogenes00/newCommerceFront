<div class="modal fade" id="modalVerComprovante" data-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="modalVerComprovante" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                Análise de Comprovante
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <!--Aqui ficará o conteúdo para anexar o comprovante e enviar-->
                <form id="formAnaliseComprovante" action="/payment" method="POST">

                    <div class="row">
                        <div class="col">
                            <a href="" target="_blank" id="linkComprovante">Baixar comprovante</a>                            
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col">
                            <select id="status" name="status" required class="form-select form-control form-control-sm mb-2">                                
                                <option value="">Selecione uma opção</option>
                                <option value="RECEBIDO">Aprovar pagamento</option>
                                <option value="RECUSADO">Recusar pagamento</option>
                            </select>

                            <input type="text" required placeholder="Deixe aqui seu informe de recusa ou aceite"
                                name="informe" class="form-control form-control-sm" id="informe">

                            <hr>
                            <input type="button" onclick="analiseComprovante(event)" class="btn btn-primary" id="btnSalvar" data-idOrder="0" value="Salvar">
                           
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>